<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/price_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/slope_line"
    android:backgroundTint="@color/element_light_grey"
    android:paddingHorizontal="3dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/dot_tab_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/price_tv"
        style="@style/ElementText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="749 $"
        android:textColor="@color/text_grey"
        android:textSize="14sp" />

</LinearLayout>